<br><br><br>
 <div class="container">
    <div class="row">
        <% @days.each do |day| %>
      <div class="col s12 m4">
          
        <div class="card card-panel teal lighten-<%=rand(3)%>">
            <span class="card-title">Day <%= day.id %> </span>
          <span class="card-content white-text"><h1><%= day.title %></h1>
          <p><%= day.progress %></p><br>
          <p><%= day.thought %></p>
          </span>
        
         <div class="card-action">
              <a href=http://<%= day.link %>>Show link</a>
              <a href=https://<%= day.hub %>>Github link</a>
            </div>
      </div></div>
      <% end %>
    </div>
</div>